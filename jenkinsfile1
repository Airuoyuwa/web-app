pipeline{
agent any
tools{
        maven"maven3.8.6"
    }
stages{
    stage('Gitclone'){
        steps{
            sh "echo Git Clone"
            git credentialsId: 'git_ID', url: 'https://github.com/Airuoyuwa/web-app.git'
        }
    }
    stage("check git-secrets"){
        steps{
            sh 'rm trufflehog || true'
            sh 'docker run gesellix/trufflehog --json https://github.com/Airuoyuwa/web-app.git > trufflehog'
            sh 'cat trufflehog'
        }
    }
    stage('source composition analysis'){
        steps{
        sh 'rm owasp-dependecy-check.sh || true '
        sh 'wget https://raw.githubusercontent.com/Airuoyuwa/web-app/master/owasp-dependecy-check.sh'
        sh 'chmod +x owasp-dependecy-check.sh'
        sh 'bash owasp-dependecy-check.sh'
        }
     }
    
    
    stage('Build'){
        steps{
            sh "echo Start Build"
            sh "mvn clean package"
        }
    }
    
}
}
